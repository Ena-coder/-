/* miniprogram/pages/music/music.wxss */
.body{
  margin-top: 20px;
  margin-bottom: 60px;
  display: flex;
  justify-content:center;
}
.player{
  width: 300px;
  height: 100px;
  background-color: rgba(255, 255, 255, .2);
  border-radius: 20px;
  display: flex;
  align-items:center;
  justify-content: space-between;
}
.disk{
  width: 80px;
  height: 80px;
  margin-left: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.disk_cover{
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.point{
  width: 20px;
  height: 20px;
  border: solid 6px  rgba(255, 255, 255, .4);
  background-color: #000000;
  position: absolute;
  border-radius: 100%;
}
.content{
  width: 160px;
  height: 80px;
  margin-right: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.disk_info{
  width: 100%;
  height: 20px;
  display: flex;
  justify-content: space-between;
  align-items:flex-end;
}
.progress_bar{
  width: 100%;
}
.btn_group{
  width: 100%;
  height: 35px;
  display: flex;
  justify-content: space-between;
}
.disk_info .title{
  font-size: 16px;
  color: white;
  font-weight: 500;
  width: 40%;
}
.disk_info .singer{
  font-size: 12px;
  color: rgba(255, 255, 255, .4);
  width: 40%;
  display: flex;
  justify-content: flex-end;
}
.slider{
  width: 90%;
  height: 8px;
  position: relative;
  top: -6px;
  left: -6px;
}




.album_choice{
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.item_cover{
  border-radius: 50%;
  width: 60px;
  height: 60px;
}